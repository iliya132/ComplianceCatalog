{
  "compilerOptions": {
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": false,
    "alwaysStrict": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "lib": [
      "DOM",
      "ES5",
      "ES2015",
      "ES2017",
      "ES2015.promise"
    ],
    "target": "ES5",
    "module": "ES2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "jsx": "react"
  },
  "exclude": [
    "bin",
    "node_modules",
    "**/src/*/*"
  ]
}